{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "BuildCurrent",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}",
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-pedantic"

      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "RunCurrent",
      "dependsOn": "BuildCurrent",
      "type": "shell",
      "command": "${fileDirname}/bin/${fileBasenameNoExtension}",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
